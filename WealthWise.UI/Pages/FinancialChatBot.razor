@page "/financial-chat"
@using WealthWise.UI.Services
@using System.Net
@using System.Text
@using System.Text.Json
@using System.Text.RegularExpressions
@using Microsoft.AspNetCore.Components

@* @inject AiChatService ChatService // Need to fix the issue *@

<div class="card">
    <div class="header-section">
        <h1 class="main-title">🤖 AI Financial Assistant</h1>
    </div>
    <div class="chat-container">
        @foreach (var msg in messages)
        {
            <div class="chat-message @(msg.Role)">
                <div class="bubble">@((MarkupString)FormatMessageContent(msg.Content))</div>
            </div>
        }

        @if (isTyping)
        {
            <div class="chat-message assistant">
                <div class="bubble typing">...</div>
            </div>
        }
    </div>

    <div class="chat-input">
        <input @bind="userInput" placeholder="Type your message..." @onkeydown="@OnKeyDown" />
        <button @onclick="SendMessage">Send</button>
    </div>

</div>

@code {
    private List<ChatMessage> messages = new()
    {
        new ChatMessage("assistant", "Hello! I'm your Financial Assistant. How can I help you today?")
    };

    private string userInput = "";
    private bool isTyping = false;
    private readonly HttpClient _httpClient = new();

    protected override void OnInitialized()
    {
        _httpClient.BaseAddress = new Uri("http://localhost:8000"); // API URL
    }

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(userInput)) return;

        var userMsg = new ChatMessage("user", userInput);
        messages.Add(userMsg);

        var input = userInput;
        userInput = "";
        isTyping = true;

        StateHasChanged();

        try
        {
            var httpRequest = new HttpRequestMessage(HttpMethod.Post, $"/financial/chat?message={Uri.EscapeDataString(input)}");
            var apiResponse = await _httpClient.SendAsync(httpRequest);

            if (apiResponse.IsSuccessStatusCode)
            {
                var raw = await apiResponse.Content.ReadAsStringAsync();

                // Normalize and unescape if API returned an escaped JSON string
                var reply = NormalizeApiResponse(raw);

                messages.Add(new ChatMessage("assistant", reply));
            }
            else
            {
                messages.Add(new ChatMessage("assistant", "⚠️ Error: Unable to get response from the server."));
            }
        }
        catch (Exception ex)
        {
            messages.Add(new ChatMessage("assistant", $"⚠️ Error: {ex.Message}"));
        }
        finally
        {
            isTyping = false;
            StateHasChanged();
        }
    }

    private async Task OnKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SendMessage();
        }
    }

    // Convert API response into a plain string with real newlines
    private string NormalizeApiResponse(string raw)
    {
        if (string.IsNullOrEmpty(raw))
            return string.Empty;

        // If the API returned a JSON string (with surrounding quotes and escaped newlines), try to deserialize first
        try
        {
            // This will turn "Hello\nWorld" -> Hello\nWorld (real newline characters)
            var deserialized = JsonSerializer.Deserialize<string>(raw);
            if (!string.IsNullOrEmpty(deserialized))
                return deserialized;
        }
        catch
        {
            // ignore deserialization errors and try fallbacks
        }

        // If the response still contains escaped sequences like \n, unescape them
        if (raw.Contains("\\n") || raw.Contains("\\r"))
        {
            try
            {
                var unescaped = Regex.Unescape(raw);
                return unescaped;
            }
            catch
            {
                // ignore
            }
        }

        // Strip surrounding quotes if present
        if ((raw.StartsWith("\"") && raw.EndsWith("\"")) || (raw.StartsWith("'") && raw.EndsWith("'")))
        {
            return raw.Substring(1, raw.Length - 2).Replace("\\r\\n", "\n").Replace("\\n", "\n");
        }

        return raw;
    }

    // Produce safe HTML with <p> per paragraph (split by double newlines) and <br/> inside paragraphs
    private MarkupString FormatMessageContent(string content)
    {
        if (string.IsNullOrEmpty(content))
            return (MarkupString)string.Empty;

        // Normalize CRLF to \n
        var normalized = content.Replace("\r\n", "\n").Replace("\r", "\n");

        // Split into paragraphs on double newlines (keep empty paragraphs if there are multiple)
        var paragraphs = normalized.Split(new string[] { "\n\n" }, StringSplitOptions.None);

        var sb = new StringBuilder();
        foreach (var para in paragraphs)
        {
            // HTML-encode paragraph content to avoid XSS
            var encoded = WebUtility.HtmlEncode(para ?? string.Empty);

            // Replace remaining single newlines inside paragraph with <br/>
            encoded = encoded.Replace("\n", "<br/>");

            sb.Append("<p>");
            sb.Append(encoded);
            sb.Append("</p>");
        }

        return (MarkupString)sb.ToString();
    }

    public class ChatMessage
    {
        public string Role { get; set; } // "user" or "assistant"
        public string Content { get; set; }
        public ChatMessage(string role, string content)
        {
            Role = role;
            Content = content;
        }
    }
}
